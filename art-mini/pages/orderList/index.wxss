.df {
  flex-direction: row;
  justify-content: space-between;
}
.zan-btn {
  margin-top: 17px;
}
.msg {
  padding: 10px;
  text-align: center;
  font-size: 15px;
  color: #9e9e9e;
  border-top: 1px solid #e3e5e9;
}